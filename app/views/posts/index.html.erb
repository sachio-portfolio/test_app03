<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Divesite</th>
      <th>Divepoint</th>
      <th>Status</th>
      <th>Temp</th>
      <th>Visibility</th>
      <th>Content</th>
      <th>Image</th>
      <th>Video</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.divesite.name %></td>
        <td><%= post.divepoint %></td>
        <td><%= post.status %></td>
        <td><%= post.temp %></td>
        <td><%= post.visibility %></td>
        <td><%= post.content %></td>
        <td><%= post.image %></td>
        <td><%= post.video %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
